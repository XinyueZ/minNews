<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="style/Theme.Sherlock.Light">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/gradient_blue_to_white</item>
        <item name="displayOptions">showHome|showCustom</item>
    </style>

    <style name="NoActionBar" parent="Theme.Sherlock.Light.NoActionBar"/>

    <style name="Dialog_Translucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:textColorLink">@color/violet</item>
    </style>

    <style name="Text.Topline">
        <item name="font">robotoLight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_topline</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Text.News_Topline" parent="Text.Topline">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:lines">3</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="Text.Error_Topline" parent="Text.Topline"/>

    <style name="Text.Headline">
        <item name="font">robotoThin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_headline</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Text.News_Headline" parent="Text.Headline">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
    </style>

    <style name="Text.Error_Headline" parent="Text.Headline"/>

    <style name="Text.News_Details_Topline" parent="Text.Topline">
        <item name="font">robotoBold</item>
        <item name="android:padding">@dimen/details_box_padding</item>
        <item name="android:background">@drawable/rounded_solid_white</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra</item>
        <item name="android:autoLink">all</item>
        <item name="android:gravity">top|left</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="Text.Dialog_Title" parent="Text.Topline">
        <item name="font">robotoRegular</item>
        <item name="android:layout_marginTop">@dimen/dialog_content_padding_top</item>
        <item name="android:layout_marginLeft">@dimen/dialog_title_padding_left_right</item>
        <item name="android:layout_marginRight">@dimen/dialog_title_padding_left_right</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="Text.News_Details" parent="Text.Topline">
        <item name="android:padding">@dimen/details_box_padding</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra</item>
        <item name="android:autoLink">all</item>
        <item name="android:gravity">top|left</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="Text.News_Date">
        <item name="font">robotoRegular</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Text.Input_Search_Key">
        <item name="font">robotoLight</item>
        <item name="android:width">160dp</item>
        <item name="android:background">@drawable/selector_ics_text_field</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:hint">@string/title_input_search</item>
    </style>

    <style name="Text.Langauge_Choice_Text">
        <item name="font">robotoRegular</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Text.Dialog_Radio_Text" parent="Text.Langauge_Choice_Text">
        <item name="android:layout_marginTop">@dimen/dialog_radios_padding_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/dialog_radios_padding_top_bottom</item>
    </style>

    <style name="Text.Dialog_2_Buttons" parent="Text.Langauge_Choice_Text">
        <item name="android:layout_marginTop">@dimen/dialog_2_buttons_right_button_padding_top
        </item>
        <item name="android:layout_marginBottom">
            @dimen/dialog_2_buttons_right_button_padding_bottom
        </item>
    </style>

    <style name="Text.Yellow.Button" parent="Text.Langauge_Choice_Text">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@drawable/selector_yellow_button</item>
    </style>

    <style name="Text.Yellow.Ok.Button" parent="Text.Yellow.Button">
        <item name="android:background">@drawable/selector_yellow_button</item>
        <item name="android:text">@string/title_ok</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="Text.Yellow.Retry.Button" parent="Text.Yellow.Button">
        <item name="android:background">@drawable/selector_yellow_button</item>
        <item name="android:text">@string/action_retry</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="Text.Yellow.Cancel.Button" parent="Text.Yellow.Button">
        <item name="android:background">@drawable/selector_yellow_button</item>
        <item name="android:text">@string/title_cancel</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="Text.Yellow.Long.Button" parent="Text.Yellow.Button">
        <item name="android:background">@drawable/selector_yellow_button</item>
        <item name="android:layout_marginBottom">@dimen/details_box_margin</item>
    </style>

    <style name="Switch" parent="switch_light">
        <item name="font">robotoThin</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Sidebar">
        <item name="android:background">@drawable/gradient_blue_to_white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="line">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="Dialog_Sep_Line" parent="line">
        <item name="android:layout_marginTop">@dimen/dialog_sep_line_padding_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/dialog_sep_line_padding_top_bottom</item>
        <item name="android:layout_marginLeft">@dimen/dialog_sep_line_padding_left_right</item>
        <item name="android:layout_marginRight">@dimen/dialog_sep_line_padding_left_right</item>
    </style>

    <style name="Bookmark_Button" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_marginRight">@dimen/bookmark_button_margin_top_right</item>
        <item name="android:layout_marginTop">@dimen/bookmark_button_margin_top_right</item>
    </style>

    <style name="Share_Button" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:padding">@dimen/share_button_margin_bottom_right</item>
    </style>

    <style name="NewsList" parent="android:Widget.Holo.Light.ListView">
        <item name="android:background">@drawable/bg_world</item>
        <item name="android:cacheColorHint">@color/cache_color_hint</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/bookmark_button_margin_top_right</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="Common_Dialog">
        <item name="android:paddingTop">@dimen/dialog_content_padding_top</item>
        <item name="android:paddingLeft">@dimen/dialog_content_padding_left</item>
        <item name="android:paddingRight">@dimen/dialog_content_padding_right</item>
        <item name="android:background">@drawable/bg_overlay</item>
    </style>

    <style name="Prograssbar_Dialog" parent="Common_Dialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Thumb" parent="Thumb_Details">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Thumb_Banner" parent="Thumb_Details">
        <item name="android:src">@drawable/ic_banner_hot_item</item>
    </style>

    <style name="Thumb_Details">
        <item name="android:contentDescription">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_launcher</item>
    </style>

    <style name="Splash_Icon">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="Text.Splash_Loading">
        <item name="font">robotoRegular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/title_loading_you_data</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/splash_between</item>
    </style>

    <style name="Text.Tab">
        <item name="android:textColor">@drawable/selector_tab_pagers_text</item>
        <item name="android:textSize">@dimen/weather_tab_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SearchRemoveButton">
        <item name="android:src">@drawable/ic_remove</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@null</item>
    </style>

</resources>
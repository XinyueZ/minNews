<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="style/Theme.Sherlock.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:textColorLink">@color/violet</item>
    </style>

    <style name="Text.News_Topline">
        <item name="font">robotoLight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Text.News_Headline">
        <item name="font">robotoThin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Text.News_Date">
        <item name="font">robotoRegular</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Text.ActionBar_Title">
        <item name="font">robotoLight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Text.Pull2Load_Text" parent = "switch_light">
        <item name="font">robotoThin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="style/Theme.Sherlock.Light">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/gradient_blue_to_white</item>
        <item name="displayOptions">showHome|showCustom</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:textColorLink">@color/violet</item>
    </style>

    <style name="Text.News_Topline">
        <item name="font">robotoLight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Text.News_Headline">
        <item name="font">robotoThin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Text.News_Details_Topline" parent="Text.News_Topline">
        <item name="font">robotoBold</item>
        <item name="android:padding">@dimen/details_box_padding</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Text.News_Details" parent="Text.News_Topline">
        <item name="android:padding">@dimen/details_box_padding</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Text.News_Date">
        <item name="font">robotoRegular</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Text.Input_Search_Key">
        <item name="font">robotoLight</item>
        <item name="android:width">140dp</item>
        <item name="android:background">@drawable/selector_ics_text_field</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:hint">@string/title_input_search</item>
    </style>

    <style name="Text.News_Size_Text" parent="Text.Langauge_Choice_Text" />

    <style name="Text.Langauge_Choice_Text">
        <item name="font">robotoRegular</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Switch" parent="switch_light">
        <item name="font">robotoThin</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Sidebar">
        <item name="android:background">@drawable/gradient_blue_to_white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="line">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="Bookmark_Button" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_marginRight">@dimen/bookmark_button_margin_top_right</item>
        <item name="android:layout_marginTop">@dimen/bookmark_button_margin_top_right</item>
    </style>

    <style name="Share_Button" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:padding">@dimen/share_button_margin_bottom_right</item>
    </style>

    <style name="NewsList" parent="android:Widget.Holo.Light.ListView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@color/cache_color_hint</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/bookmark_button_margin_top_right</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

</resources>